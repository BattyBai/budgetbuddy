<%= form_with(model: transaction) do |form| %>
  <% if transaction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mt-5 mb-4">
    <% form.label :date, style: "display: block" %>
    <%= form.date_field :date, class:"form-control"%>
  </div>

  <div class="form-group mb-4">
    <% form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control", placeholder: "Payee/Business" %>
  </div>

  <div class="form-group mb-3">
    <% form.label :description, style: "display: block" %>
    <%= form.text_field :description, class:"form-control", placeholder: "Description" %>
  </div>

  <div class="form-group mb-3">
    <% form.label :amount, style: "display: block" %>
    <%= form.text_field :amount, class:"form-control", placeholder: "Amount" %>
  </div>

  <div class="form-group mb-3">
    <% form.label :category, style: "display: block" %>
    <select class="form-select" <%= form.text_field :category, class:"form-control" %>>
      <option selected disabled>Select Category</option>
      <option value="Housing">Housing</option>
      <option value="Transportation">Transportation</option>
      <option value="Food/Grocery">Food/Grocery</option>
      <option value="Utilities">Utilities</option>
      <option value="Medical">Medical</option>
      <option value="Entertainment">Entertainment</option>
      <option value="Savings">Savings</option>
      <option value="Miscellaneous">Misc</option>
    </select>
  </div>

  <div class="form-group mb-3">
    <% form.label :user_id,  style: "display: block" %>
    <%= form.number_field :user_id, id: :transaction_user_id, class:"form-control", type: :hidden, value:current_user.id%>
  </div>
  
  <div>
    <%= form.submit class: "btn btn-success btn-lg mt-3" %>
  </div>
<% end %>
